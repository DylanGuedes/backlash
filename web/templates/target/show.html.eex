<h1><%= @target.name %></h1>

<div class="media">
  <div class="media-left">
    <%= if @target.image do %>
      <img width=200 src="<%= Backlash.ImageUploader.url({@target.image.file_name, @target.image}) %>"/>
    <% end %>
  </div>
</div>

<h2>Setups for this target</h2>
<div class="row">
  <%= for stp <- @target.setups do %>
    <%= render Backlash.SetupView, "setup.html", conn: @conn, stp: stp %>
  <% end %>
</div>
